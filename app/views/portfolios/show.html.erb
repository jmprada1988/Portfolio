<div class="container portfolio-container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
            <h3>Get the code at</h3>
            <%= link_to 'Source code', @portfolio_item.source_code, class: "btn btn-basic" %>
            <%= link_to 'Project', @portfolio_item.location, class: "btn btn-basic" %>
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title %></h1>
            <hr>
            <em><%= @portfolio_item.subtitle %></em>
            <p><%= @portfolio_item.body %></p>
            <h3>Technologies used</h3>
            <hr>
            <% @portfolio_item.technologies.each do |t| %>
            <p> <%= t.name  %></p>
            <% end %> 
            <% if logged_in?(:site_admin) %> 
            <div>
                <%= link_to 'Edit Item', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
            </div>  
            <% end %>        
        </div>
    </div>
</div>
