<h1>List of porfolios</h1>
<%= link_to "Create new portfolio", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
	<h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h2>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
	<%= link_to "Edit Portfolio", edit_portfolio_path(portfolio_item) %>
	<%= link_to "Eliminate Portfolio", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure you want to delete permenetly this porfolio? '} %>
<% end %>